<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="400.0" prefWidth="600.0" type="VBox" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <ScrollPane hbarPolicy="ALWAYS">
         <content>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <TextField fx:id="nameTF" promptText="Name" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </content>
      </ScrollPane>
        <TableView fx:id="dataTV" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
        <HBox alignment="CENTER" prefHeight="50.0" spacing="20.0">
            <children>
                <Button fx:id="addButton" mnemonicParsing="false" prefWidth="100.0" text="Add" />
                <Button fx:id="updateButton" layoutX="284.0" layoutY="23.0" mnemonicParsing="false" prefWidth="100.0" text="Update" />
                <Button fx:id="deleteButton" layoutX="310.0" layoutY="23.0" mnemonicParsing="false" prefWidth="100.0" text="Delete" />
            </children>
        </HBox>
    </children>
</fx:root>
